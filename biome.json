{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules/**/*",
			"dist/**/*",
			"assets/**/*"
		]
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single"
		}
	}
}
